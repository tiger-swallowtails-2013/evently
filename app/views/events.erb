<div class="guide">
<h3>Event Details:</h3>
<p><%= @event.title %></p>
<h3>When:</h3>
<p><%= @event.datetime %></p>
<h3>What:</h3>
<p><%= @event.description %></p>
<h3>Where:</h3>
<p><%= @event.location %></p>
<h3>Guest List</h3>
<p>
<% @event.guests.each do |guest| %>
<%= guest.name %> <%= "[\u2713]" if guest.rsvp? %><br/>
<% end %>
</p>
</div>

